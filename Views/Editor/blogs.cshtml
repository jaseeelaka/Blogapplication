@model List<Blog>

@{
    Layout = "~/Views/Shared/_LayoutEditor.cshtml";
    ViewData["Title"] = "blogs";
}


<div class="container-fluid">
    <h1>Blogs</h1>
   
    <table  class="table table-bordered table-striped dataTable dtr-inline data-table table-listUser">
        <thead>
            <tr>
                <th>Title</th>
                <th>Category</th>
                <th>User</th>
                
                <th>Created Date</th>
                <th>Status</th>
                <!-- Add more headers as needed -->
            </tr>
        </thead>
        <tbody>
            @if (Model.Count > 0)
            {
                @foreach (var blog in Model)
                {
                    <tr>
                        <td>@blog.title</td>
                        <td>@blog.Catname</td>
                        <td>@blog.username</td>
                        <td>@blog.createddate.ToString("MM/dd/yyyy")</td>
                        <td>
                            @if (blog.ispublished == 0)
                            {
                                <a href="/Editor/publish?a=1&blogid=@blog.Blogid" . class="btn btn-primary">Publish</a>

                            }
                            else
                            {
                                <a href="/Editor/publish?a=0&blogid=@blog.Blogid" class="btn btn-primary">Un Publish</a>

                            }
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <p>No Record Found</p>

                </tr>

            }
        </tbody>
    </table>
</div>
